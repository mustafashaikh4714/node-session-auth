<div class="container">
  <h1 class="container__heading">Register</h1>
  <form action="/register" method="post" class="container__main">
    <input type="text" placeholder="name" name="name" class="container__main--name">
    <input type="text" placeholder="email" name="email" class="container__main--email">
    <input type="text" placeholder="password" name="password" class="container__main--password">
    <input type="submit" class="container__main--submit" />
    <a href="/login" class="container__main--register">Login</a>
  </form>
</div>